{
  "name": "email-autocorrect",
  "version": "2.1.1",
  "description": "Unicode-first email validation with EAI/IDN support. Smart typo correction for React Native, React, and Next.js. Zero dependencies, tree-shakeable.",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./lib/typescript/index.d.ts",
      "import": "./lib/module/index.js",
      "require": "./lib/commonjs/index.js"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rm -rf lib",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "react",
    "react-native",
    "nextjs",
    "next",
    "email",
    "validation",
    "autocorrect",
    "typo",
    "correction",
    "web",
    "universal",
    "mobile",
    "form",
    "international",
    "unicode",
    "eai",
    "idn",
    "accessibility",
    "wcag",
    "aria",
    "levenshtein",
    "instant-suggestions",
    "voice-input",
    "tree-shakeable",
    "zero-dependencies"
  ],
  "author": "Anivar Aravind <ping@anivar.net>",
  "license": "MIT",
  "homepage": "https://github.com/anivar/email-autocorrect#readme",
  "bugs": {
    "url": "https://github.com/anivar/email-autocorrect/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anivar/email-autocorrect.git"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.72.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "react-native": "^0.81.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  },
  "files": [
    "lib",
    "src",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
